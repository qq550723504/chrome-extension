{
  "manifest_version": 3,
  "name": "1688选品工具",
  "version": "1.0.0",
  "description": "自动收集1688商品信息，帮助选品分析",
  "author": "Henry",
  "permissions": ["activeTab", "storage", "scripting"],
  "host_permissions": [
    "https://*.1688.com/*",
    "https://www.1688.com/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.svg",
      "32": "icons/icon32.svg",
      "48": "icons/icon48.svg",
      "128": "icons/icon128.svg"
    }
  },
  "content_scripts": [
    {
      "matches": [
        "https://*.1688.com/*",
        "https://www.1688.com/*"
      ],
      "js": ["content.js"],
      "css": ["content.css"],
      "run_at": "document_start"
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icons/icon16.svg",
    "32": "icons/icon32.svg",
    "48": "icons/icon48.svg",
    "128": "icons/icon128.svg"
  }
}