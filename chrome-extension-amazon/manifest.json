{
  "manifest_version": 3,
  "name": "Amazon选品工具",
  "version": "1.0.0",
  "description": "自动收集亚马逊搜索结果中的产品ASIN",
  "author": "Henry",
  "permissions": ["activeTab", "storage", "scripting"],
  "host_permissions": [
    "https://*.amazon.com/*",
    "https://*.amazon.cn/*",
    "https://*.amazon.co.uk/*",
    "https://*.amazon.de/*",
    "https://*.amazon.fr/*",
    "https://*.amazon.it/*",
    "https://*.amazon.es/*",
    "https://*.amazon.ca/*",
    "https://*.amazon.com.mx/*",
    "https://*.amazon.com.br/*",
    "https://*.amazon.co.jp/*",
    "https://*.amazon.in/*",
    "https://*.amazon.com.au/*",
    "https://*.amazon.sg/*",
    "https://*.amazon.ae/*",
    "https://*.amazon.sa/*",
    "https://*.amazon.nl/*",
    "https://*.amazon.se/*",
    "https://*.amazon.pl/*",
    "https://*.amazon.com.tr/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.svg",
      "32": "icons/icon32.svg",
      "48": "icons/icon48.svg",
      "128": "icons/icon128.svg"
    }
  },
  "content_scripts": [
    {
      "matches": [
        "https://*.amazon.com/*",
        "https://*.amazon.cn/*",
        "https://*.amazon.co.uk/*",
        "https://*.amazon.de/*",
        "https://*.amazon.fr/*",
        "https://*.amazon.it/*",
        "https://*.amazon.es/*",
        "https://*.amazon.ca/*",
        "https://*.amazon.com.mx/*",
        "https://*.amazon.com.br/*",
        "https://*.amazon.co.jp/*",
        "https://*.amazon.in/*",
        "https://*.amazon.com.au/*",
        "https://*.amazon.sg/*",
        "https://*.amazon.ae/*",
        "https://*.amazon.sa/*",
        "https://*.amazon.nl/*",
        "https://*.amazon.se/*",
        "https://*.amazon.pl/*",
        "https://*.amazon.com.tr/*"
      ],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icons/icon16.svg",
    "32": "icons/icon32.svg",
    "48": "icons/icon48.svg",
    "128": "icons/icon128.svg"
  }
}
